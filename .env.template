# Azure Health Data Services - FHIR Service
# Example: https://<workspace>-<service>.healthcareapis.azure.com
FHIR_URL=

# Azure Storage container SAS URL used for bulk import (e.g., https://account.blob.core.windows.net/container?sas-token)
FHIR_IMPORT_CONTAINER_SAS_URL=

# Azure OpenAI
# Example: https://<your-resource-name>.openai.azure.com
AOAI_ENDPOINT=

# Azure OpenAI Deployment Name
# Example: gpt-4o-mini or gpt-4o
AOAI_DEPLOYMENT=

# Azure OpenAI API Key (if not using Managed Identity)
# Leave empty if using DefaultAzureCredential with Managed Identity
AOAI_API_KEY=

# Optional: Azure Tenant ID (for authentication)
AZURE_TENANT_ID=

# Optional: Azure Client ID (for service principal authentication)
AZURE_CLIENT_ID=

# Optional: Azure Client Secret (for service principal authentication)
AZURE_CLIENT_SECRET=

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
